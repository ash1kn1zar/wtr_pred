import numpy as np
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
%matplotlib inline

weather = pd.read_csv("Weather.csv")
weather.info()

weather.describe()

sns.scatterplot(x="avg_relative_humidity", y="avg_temp", data=weather)

plt.hist(data=weather, x="date")

sns.pairplot(data=weather)

weather.head()

X= weather[['min_temp', 'max_temp', 'precipitation', "max_wind_speed", "most_wind_direction", "avg_relative_humidity"]]
X.head()

y=weather[['avg_temp']]
y.head()

from sklearn.preprocessing import StandardScaler
scaler = StandardScaler()
fitted = scaler.fit(X)
transformed = scaler.fit_transform(X)

from sklearn.model_selection import train_test_split
X_train, X_test, y_train, y_test = train_test_split(transformed, y, test_size=0.3, random_state=42)

from sklearn.linear_model import LinearRegression
lr = LinearRegression()
lr.fit(X_train, y_train)
predictions = lr.predict(X_test)
print(predictions)

from sklearn.metrics import classification_report, confusion_matrix
score = lr.score(X_test, y_test)
print(score)
